@page "/foros"
@inject ForoService ForoService
@rendermode InteractiveServer
@inject IJSRuntime JSRuntime

<PageTitle>Foros</PageTitle>

<div class="container my-4">
    <div class="d-flex justify-content-center mb-4">
        <h3 class="fw-bold titulo-vende">Mantente al dia en el mundo de los Bienes raices con nuestros foros informativos</h3>
    </div>

    @if (foros is null)
    {
        <div class="d-flex flex-column align-items-center">
            <span class="mb-3 fs-6">Cargando Foros...</span>
            <div>
                <div class="spinner-grow text-primary mx-1" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    }
    else if (!foros.Any())
    {
        <div class="alert alert-info text-center">No hay foros disponibles en este momento.</div>
    }
    else
    {
        <div class="row">
            @foreach (var foro in foros)
            {
                <div class="col-12 mb-4 foros-item animate-slide-up px-0">
                    <div class="card h-100 shadow-sm">
                        <div class="row g-0">
                            <div class="col-md-4">
                                @if (foro.ImagenUrl != null && foro.ImagenUrl != "")
                                {
                                    <img src="@foro.ImagenUrl"
                                         class="img-fluid rounded-start h-100"
                                         alt="@foro.Titulo"
                                         style="object-fit: cover; height: 80px;">
                                }
                                else
                                {
                                    <div class="card-img-top ultimas-card-img bg-light d-flex align-items-center justify-content-center">
                                        <i class="bi bi-house text-muted" style="font-size: 3rem;"></i>
                                    </div>
                                }
                            </div>
                            <div class="col-md-8">
                                <div class="card-body d-flex flex-column h-100">
                                    <div class="d-flex justify-content-end mb-1">
                                        <small class="text-muted flex-shrink-0 ms-2">@foro.FechaCreacion.ToString("dd/MM/yyyy")</small>
                                    </div>

                                    <div class="">
                                        <h5 class="card-title">@foro.Titulo</h5>

                                    </div>
                                    <p class="card-text text-muted flex-grow-1">
                                        @(foro.Descripcion.Length > 150 ? foro.Descripcion.Substring(0, 150) + "..." : foro.Descripcion)
                                    </p>
                                    <div class="mt-auto d-flex justify-content-end">
                                        <a href="@foro.LinkForo" target="_blank" class="btn btn-sm btn-info text-white p-2 bi bi-box-arrow-up-right"> Ir al Foro</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex justify-content-center">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Anterior</button>
                    </li>
                    @for (int i = 1; i <= TotalPages; i++)
                    {
                        var pageNumber = i;
                        <li class="page-item @(currentPage == pageNumber ? "active" : "")">
                            <button class="page-link" @onclick="() => ChangePage(pageNumber)">@pageNumber</button>
                        </li>
                    }
                    <li class="page-item @(currentPage == TotalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">Siguiente</button>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

@code {
    private List<Foros>? foros;
    private int currentPage = 1;
    private int pageSize = 3;
    private int totalForos;

    private int TotalPages => (int)Math.Ceiling(totalForos / (double)pageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadForos();
    }

    private async Task LoadForos()
    {
        foros = null;
        var result = await ForoService.ListarPaginado(currentPage, pageSize, string.Empty, string.Empty, null, null);
        foros = result.foros;
        totalForos = result.TotalCount;
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || page > TotalPages || page == currentPage)
        {
            return;
        }
        currentPage = page;
        await LoadForos();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        JSRuntime.InvokeVoidAsync("initializeIntersectionObserver");
    }
}