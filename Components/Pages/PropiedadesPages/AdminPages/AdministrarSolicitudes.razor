@code {
    private bool isLoading = true;
    private List<SolicitudUnirse> solicitudesUnirse = new();
    private List<SolicitudVenta> solicitudesVender = new();

    private SolicitudVenta? solicitudVentaSeleccionada;
    private SolicitudUnirse? solicitudUnirseSeleccionada;
    private SolicitudUnirse? solicitudUnirseParaVer;
    private SolicitudVenta? solicitudVentaParaVer;

    private int currentPageUnirse = 1;
    private int pageSize = 5;
    private int totalPagesUnirse = 1;
    private int totalResultadosUnirse = 0;
    private string InputTextUnirse { get; set; } = string.Empty;
    public DateTime? DesdeUnirse { get; set; } = DateTime.UtcNow.AddMonths(-1);
    public DateTime? HastaUnirse { get; set; } = DateTime.UtcNow;
    public string FiltroUnirse { get; set; } = "Nombre";

    private int currentPageVender = 1;
    private int totalPagesVender = 1;
    private int totalResultadosVender = 0;
    private string InputTextVender { get; set; } = string.Empty;
    public DateTime? DesdeVender { get; set; } = DateTime.UtcNow.AddMonths(-1);
    public DateTime? HastaVender { get; set; } = DateTime.UtcNow;
    public string FiltroVender { get; set; } = "Nombre";

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        await Task.WhenAll(CargarSolicitudesUnirse(), CargarSolicitudesVender());
        isLoading = false;
    }

    private async Task CargarSolicitudesUnirse()
    {
        var result = await SolicitudesUnirseService.ListarPaginado(currentPageUnirse, pageSize, FiltroUnirse, InputTextUnirse, DesdeUnirse, HastaUnirse);
        solicitudesUnirse = result.Solicitudes;
        totalResultadosUnirse = result.TotalCount;
        totalPagesUnirse = (int)Math.Ceiling(totalResultadosUnirse / (double)pageSize);
        if (totalPagesUnirse == 0) totalPagesUnirse = 1;
    }

    private async Task CargarSolicitudesVender()
    {
        var result = await SolicitudesVentaService.ListarPaginado(currentPageVender, pageSize, FiltroVender, InputTextVender, DesdeVender, HastaVender);
        solicitudesVender = result.Solicitudes;
        totalResultadosVender = result.TotalCount;
        totalPagesVender = (int)Math.Ceiling(totalResultadosVender / (double)pageSize);
        if (totalPagesVender == 0) totalPagesVender = 1;
    }

    private async Task BuscarSolicitudesUnirse()
    {
        currentPageUnirse = 1;
        await CargarSolicitudesUnirse();
    }

    private async Task BuscarSolicitudesVender()
    {
        currentPageVender = 1;
        await CargarSolicitudesVender();
    }

    private async Task CambiarPaginaUnirse(int page)
    {
        if (page < 1 || page > totalPagesUnirse) return;
        currentPageUnirse = page;
        await CargarSolicitudesUnirse();
    }

    private async Task CambiarPaginaVender(int page)
    {
        if (page < 1 || page > totalPagesVender) return;
        currentPageVender = page;
        await CargarSolicitudesVender();
    }


    private void AbrirModalVender(SolicitudVenta solicitud)
    {
        solicitudVentaSeleccionada = solicitud;
        solicitudUnirseSeleccionada = null;
        StateHasChanged();
    }

    private void AbrirModalUnirse(SolicitudUnirse solicitud)
    {
        solicitudUnirseSeleccionada = solicitud;
        solicitudVentaSeleccionada = null;
        StateHasChanged();
    }

    private void CerrarModal()
    {
        solicitudVentaSeleccionada = null;
        solicitudUnirseSeleccionada = null;
        StateHasChanged();
    }

    private void AbrirModalVerUnirse(SolicitudUnirse solicitud)
    {
        solicitudUnirseParaVer = solicitud;
        StateHasChanged();
    }

    private void AbrirModalVerVender(SolicitudVenta solicitud)
    {
        solicitudVentaParaVer = solicitud;
        StateHasChanged();
    }

    private void CerrarModalVer()
    {
        solicitudUnirseParaVer = null;
        solicitudVentaParaVer = null;
        StateHasChanged();
    }

    private async Task GuardarEstadoVenta()
    {
        if (solicitudVentaSeleccionada != null)
        {
            var success = await SolicitudesVentaService.Guardar(solicitudVentaSeleccionada);
            if (success)
            {
                NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = "Éxito", Detail = "Estado de la solicitud de venta actualizado correctamente.", Duration = 4000 });
            }
            else
            {
                NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Error, Summary = "Error", Detail = "No se pudo actualizar el estado de la solicitud de venta.", Duration = 4000 });
            }
            CerrarModal();
        }
    }

    private async Task GuardarEstadoUnirse()
    {
        if (solicitudUnirseSeleccionada != null)
        {

            var success = await SolicitudesUnirseService.Guardar(solicitudUnirseSeleccionada);
            if (success)
            {
                NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = "Éxito", Detail = "Estado de la solicitud para unirse actualizado correctamente.", Duration = 4000 });
            }
            else
            {
                NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Error, Summary = "Error", Detail = "No se pudo actualizar el estado de la solicitud.", Duration = 4000 });
            }

            CerrarModal();
        }
    }

    private async Task EliminarSolicitudVenta()
    {
        if (solicitudVentaSeleccionada != null)
        {
            var success = await SolicitudesVentaService.Eliminar(solicitudVentaSeleccionada.SolicitudVentaId);
            if (success)
            {
                NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = "Éxito", Detail = "Solicitud de venta eliminada correctamente.", Duration = 4000 });
                await CargarSolicitudesVender();
            }
            else
            {
                NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Error, Summary = "Error", Detail = "No se pudo eliminar la solicitud de venta.", Duration = 4000 });
            }
            CerrarModal();
        }
    }

    private async Task EliminarSolicitudUnirse()
    {
        if (solicitudUnirseSeleccionada != null)
        {
            var success = await SolicitudesUnirseService.Eliminar(solicitudUnirseSeleccionada.SolicitudUnirseId);
            if (success)
            {
                NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = "Éxito", Detail = "Solicitud para unirse eliminada correctamente.", Duration = 4000 });
                await CargarSolicitudesUnirse();
            }
            else
            {
                NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Error, Summary = "Error", Detail = "No se pudo eliminar la solicitud para unirse.", Duration = 4000 });
            }
            CerrarModal();
        }
    }

    private string GetEstadoBadgeClass(string estado)
    {
        return estado switch
        {
            "Pendiente" => "bg-warning text-dark",
            "Contactado" => "bg-info text-dark",
            "En Proceso" => "bg-primary",
            "Completada" => "bg-success",
            "Rechazada" => "bg-danger",
            "En Revisión" => "bg-info text-dark",
            "Aprobada" => "bg-success",
            _ => "bg-secondary"
        };
    }
}